<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="DGS Tercih Ugulaması Giriş" Height="650" Width="925">
    <Grid>
    
        <StackPanel Margin="0,40">
        <WrapPanel Width="210" Orientation="Horizontal">
            <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="E-mail :" Width="100" Margin="5"/>
            <TextBox x:Name="textBox1" Height="23" TextWrapping="Wrap" Width="100"/>
        </WrapPanel>
        <WrapPanel Width="210" Orientation="Horizontal">
            <TextBlock x:Name="textBlock2" TextWrapping="Wrap" Text="Şifre :" Width="100" Margin="5"/>
            <TextBox x:Name="textBox2" Height="23" TextWrapping="Wrap" Width="100"/>
        </WrapPanel>
       <Button x:Name="buttonGiris" Content="Giriş Yap" Margin="0,10,0,5"  Width="75"/>
       <Button x:Name="buttonUyeOl" Content="Üye Ol" Width="75"/>
        </StackPanel>
        <Button x:Name="dbDeneme" Content="Listele" Width="75" Height="30" Margin="423,170,419,419" Click="dbDeneme_Click"/>
        <DataGrid x:Name="dgdeneme" Margin="0,200,0,0"  />
    </Grid>
</Window>
