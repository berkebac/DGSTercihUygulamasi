<Page x:Class="WpfApplication1.GirisPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="GirisPage">

    <Grid Background="White">
        <StackPanel Margin="0,40">
            <WrapPanel Width="210" Orientation="Horizontal">
                <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="E-mail :" Width="100" Margin="5"/>
                <TextBox x:Name="textBox_email" Height="23" TextWrapping="Wrap" Width="100"/>
            </WrapPanel>
            <WrapPanel Width="210" Orientation="Horizontal">
                <TextBlock x:Name="textBlock2" TextWrapping="Wrap" Text="Şifre :" Width="100" Margin="5"/>
                <TextBox x:Name="textBox_sifre" Height="23" TextWrapping="Wrap" Width="100"/>
            </WrapPanel>
            <Button x:Name="buttonGiris" Content="Giriş Yap" Margin="0,10,0,5"  Width="75" Click="buttonGiris_Click"/>
            <Button x:Name="buttonUyeOl" Content="Üye Ol" Width="75" Click="buttonUyeOl_Click" />
        </StackPanel>
    </Grid>
</Page>
