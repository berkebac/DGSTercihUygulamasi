<Page x:Class="WpfApplication1.UzmanYorumPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1"
      mc:Ignorable="d" 
      d:DesignHeight="260.422" d:DesignWidth="524.802"
      Title="UzmanYorumPage">

    <Grid>
        <DataGrid x:Name="dg" AutoGenerateColumns="False" Background="SkyBlue">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Ad}" ClipboardContentBinding="{x:Null}" Header="Uzman Adı"/>
                <DataGridTextColumn Binding="{Binding Ad}" ClipboardContentBinding="{x:Null}" Header="Ogrenci Adı"/>
                <DataGridTextColumn Binding="{Binding Yorum}" ClipboardContentBinding="{x:Null}" Header="Yorum"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
